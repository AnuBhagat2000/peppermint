<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/list_selector">

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Sun Jul 7 1:00 pm"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="8.0sp"
        android:paddingRight="8.0sp"
        android:text="iskup@nasa.gov"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timestamp"
        android:layout_centerHorizontal="true"
        android:text="First part (Statement)"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/adverb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statement"
        android:layout_centerHorizontal="true"
        android:paddingLeft="8.0sp"
        android:paddingRight="8.0sp"
        android:text="Second part (Adverb)"
        android:textSize="18sp" />

</RelativeLayout>