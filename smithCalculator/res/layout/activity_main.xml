<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAppearance="?android:attr/textAppearanceLarge"
    tools:context=".SmithCalcMainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/leftOperand"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="@string/leftHint"
            android:inputType="numberDecimal"
            android:maxLines="1" />

        <TextView
            android:id="@+id/operatorView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/add"
            android:textIsSelectable="true" />

        <EditText
            android:id="@+id/rightOperand"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="@string/rightHint"
            android:inputType="numberDecimal"
            android:maxLines="1" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:hint="@string/equals"
            android:maxLines="1"
            android:textIsSelectable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/displayAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/answerHint"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textIsSelectable="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dip"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onClickOperator"
                android:text="@string/add" />

            <RadioButton
                android:id="@+id/buttonSubtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOperator"
                android:text="@string/subtract" />

            <RadioButton
                android:id="@+id/buttonMultiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOperator"
                android:text="@string/multiply" />

            <RadioButton
                android:id="@+id/buttonDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickOperator"
                android:text="@string/divide" />
        </RadioGroup>

        <Button
            android:id="@+id/clearButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignLeft="@+id/Button01"
            android:onClick="onClear"
            android:text="@string/clear" />

        <Button
            android:id="@+id/Button01"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignBottom="@+id/radioGroup1"
            android:layout_below="@+id/clearButton"
            android:layout_centerHorizontal="true"
            android:onClick="onClickAnswer"
            android:text="@string/go" />

        <Button
            android:id="@+id/factorialButton"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detailsButton"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/showPrev"
            android:onClick="onClickFactorial"
            android:text="Factorial" />

        <Button
            android:id="@+id/showPrev"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/detailsButton"
            android:layout_below="@+id/detailsButton"
            android:onClick="onClickShowPrevious"
            android:text="@string/showPrevious" />

        <Button
            android:id="@+id/detailsButton"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Button01"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/empty"
            android:onClick="onClickDetails"
            android:text="@string/showDetails" />
    </RelativeLayout>

</LinearLayout>